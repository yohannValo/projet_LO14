#!/bin/bash
source ./.functions/modification_f
source ./.functions/comparaison_f
function parcours() {
if [ -d $1 ]
then
	cd $1
	for i in *;
	do
		parcours $i $2 $3 $4
	done
	cd ..
else
	echo $1
	fonction_comp_f $1 $2
	echo "$?"
	fonction_comp_f $1 $2
        if [ $? -eq 1 ] #C'est vrais = c'est different
        then
		modification $1 $2 $3 $4
        fi
fi
}

parcours $1 $2 $3 $4
